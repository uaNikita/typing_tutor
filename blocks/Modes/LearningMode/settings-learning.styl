.settings-learning
   width: 840px;
   margin: 0 auto;
   &__
      &title
         font-size: 14px;
      &view
         margin-bottom: 20px;
         font-size: 20px;
         text-align: left;
      &item
         display: flex;
         margin-bottom: 5px
         padding-top: 20px
         padding-bottom: 4px
      &label
         flex: 0 0 130px;
         margin-right: 10px
      &item-ctrl
         width: 100%;
      &item-ctrl-range
         padding-top: 8px
      &range
         flex-basis: 100%;
      &max-word-length
         display: flex
         align-items: center;
      &modes
         display: flex;
         &-menu
            flex: 0 0 140px;
            &-item
               margin-bottom: 5px
            &-title
               margin-bottom: 15px
         &-content
            flex: 0 0 700px;
      &keyboard
         .keyboard__key:not(.keyboard__key_disabled)
            cursor: pointer
   .learningarea
      margin-bottom: 20px

