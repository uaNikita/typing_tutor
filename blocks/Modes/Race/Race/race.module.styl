.keypad
   margin-top: 50px;
   margin-bottom: 50px;

.details
   margin-bottom: 10px;
   position: absolute;
   left: 50%;
   transform: translateX(-50%);
   text-align: center;

.text
   margin: 50px 0
   font-size: 30px

.typed
   opacity: 0.2;

.animation
   &-enter, &-exit
      transition opacity .15s linear
   &-enter
      opacity: 0;
      &_active
         opacity: 1;
   &-exit
      opacity: 1;
      &_active
         opacity: 0;
