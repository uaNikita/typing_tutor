.loader
   min-height: 300px
   position: relative

.message
   min-height: 300px
   display: flex;
   flex-direction: column;
   justify-content: center;
   text-align: center;
   p
      margin: 10px 0;

.countdown
   position: absolute;
   top: 50%;
   left: 50%;
   font-size: 160px;
   color: #008000;
   text-shadow: 0 0 120px #008000;
   transform: translate(-50%, calc(-50% - 80px));
   z-index: 1;

.user
   margin: 5px 60px
   display: flex
   align-items: center;

.name
   width: 200px;
   margin-right: 20px;
   text-align: right;
   font-style: italic;

.transport-road
   position: relative
   flex-basis: calc(100% - 220px);
   border-bottom: 1px dashed #dadada;

   &:after
      width: 1px
      height: 13px;
      position: absolute
      top: -6px;
      right: 0;
      border-right: 1px dashed #dadada;
      content ''

.transport-path
   width: 50% !important;
   height: 1px
   display: block

.transport
   display: block;
   background-size: cover;
   width: 100px;
   height: 90px;
   background: no-repeat url('~Static/images/transport/cycle.svg');

.keypad
   margin-top: 50px;
   margin-bottom: 50px;

.details
   margin-bottom: 10px;
   position: absolute;
   left: 50%;
   transform: translateX(-50%);
   text-align: center;

.text
   margin: 50px 0
   font-size: 30px

.typed
   opacity: 0.2;

.animation
   &-enter, &-exit
      transition opacity .15s linear
   &-enter
      opacity: 0;
      &_active
         opacity: 1;
   &-exit
      opacity: 1;
      &_active
         opacity: 0;
