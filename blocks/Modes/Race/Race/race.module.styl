.loader
   min-height: 300px
   position: relative

.message
   min-height: 300px
   display: flex;
   flex-direction: column;
   justify-content: center;
   text-align: center;
   p
      margin: 10px 0;

.countdown
   position: absolute;
   top: 50%;
   left: 50%;
   font-size: 160px;
   color: #008000;
   text-shadow: 0 0 120px #008000;
   transform: translate(-50%, calc(-50% - 80px));
   z-index: 1;

.user
   margin: 5px 60px
   display: flex
   align-items: center;

.name
   width: 200px;
   margin-right: 20px;
   text-align: right;
   font-style: italic;
   text-overflow ellipsis

.road
   display: block
   flex-basis: calc(100% - 200px);
   border-bottom: 1px dashed #dadada;

   &:after
      width: 1px
      height: 13px;
      position: absolute
      top: -6px;
      right: 0;
      border-right: 1px dashed #dadada;
      content ''
   
.track
   height: 50px;
   position: relative
   display: block
   margin-left: 100px
   
.transport
   width: 100px;
   height: 50px;
   position: absolute;
   bottom: 0;
   background-repeat: no-repeat;
   background-size: contain;
   background-position: center right;
   transform: translateX(-100%);
   
