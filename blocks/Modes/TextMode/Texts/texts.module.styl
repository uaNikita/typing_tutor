.actions
   display: flex
   justify-content space-between
   align-items: center;
   margin-bottom: 30px;
.texts
   margin: 0 -7px;
.text
   position: relative
   padding: 5px 7px;
   border-radius: 4px;
   cursor: default
   &:hover
      background-color: #fafafa
      .text-content:after
         background: linear-gradient(to right, transparent 0%, #fafafa 70%)
   &_selected
      background: #feec80 !important
      .text-content:after
         background: linear-gradient(to right, transparent 0%, #feec80 70%) !important
   &-title
      margin-bottom:2px;
      overflow: hidden
      white-space nowrap
      text-overflow ellipsis
      font-size: 14px
      line-height: 17px
   &-content
      max-height: 45px;
      position: relative
      overflow: hidden
      font-size: 12px;
      line-height: 15px;
      &:after
         width: 50px;
         height: 15px;
         position: absolute;
         bottom: 0;
         right: 0;
         background: linear-gradient(to right, transparent 0%, #fff 70%);
         content: '';