.textarea
   height: 200px;
   position: relative;
   margin-top: 20px;
   &:before, &:after
      width: 100%
      height: 5px
      position: absolute
      left: 0
      content ''
      z-index: 1
   &:before
      top: 0
      background-image: linear-gradient(to top, transparent, #fff);
   &:after
      bottom: 0
      background-image: linear-gradient(to bottom, transparent, #fff);
.content
   height: 100%
   position: relative
   overflow: hidden
   padding: 0 40px;
   font-size: 28px
   line-height: 40px
.typed
   opacity: 0.2
