.root
   height: 60px;
   position: relative
   display flex
   justify-content: space-between;
   align-items: center;
   z-index: 2;

.actions
   display: flex
   align-items: center;

.left
   display: flex
   align-items: center;

.right
   display: flex

.navigation
   display: flex
   &:before
      width: 1px;
      top: 10px
      bottom: @top;
      position: absolute
      background-color: #ccc;
      content '';

.menu
   margin-right: 5px
   
.button
   font-size: 36px

.eye
   width 60px
   height: @width;
   font-size: 24px;

.item
   margin-top: 5px
   margin-bottom: 5px
   white-space nowrap
   &_modes
      margin-left: 10px
   &:last-child
      margin-bottom: 0

.modes-title
   margin-bottom: -5px


