.root
   height: 60px;
   position: relative
   display flex
   justify-content: space-between;
   align-items: center;
   z-index: 2;
.actions
   display: flex
   align-items: center;
.button
   width: 60px;
   height: 60px;
   font-size: 36px
   position: relative;
   z-index: 2;
.menu
   position: relative;
   color: #fff;
   &_expanded
      .button
         background-color: #f7a700;
         color: #fff;
         &:hover
            color: #ff5665;
      .nav
         display: flex
.nav
   display: none;
   position: absolute;
   top 60px
   right: 0
   flex-direction column
   align-items flex-start
   margin-left: -20px;
   padding: 20px 25px;
   background-image: linear-gradient(to bottom, #f7a700 0%, #ffe100 100%);
   z-index 1
.item
   display: block;
   margin-top: 5px
   margin-bottom: 5px
   white-space nowrap
   color: #fff;
   a&
      border-bottom-color: #fff;
      &:hover
         border-bottom-color: #ff5665;
   &_modes
      margin-left: 10px
.modes-title
   margin-bottom: -5px
