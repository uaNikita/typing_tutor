.root
   height: 60px;
   position: relative
   display flex
   justify-content: space-between;
   align-items: center;
   z-index: 2;
.button
   font-size: 36px
   position: relative;
   z-index: 2;
.items
   position: absolute;
   top 0
   left: 0
   display: flex
   flex-direction column
   align-items: flex-start;
   padding: 50px 20px 20px;
   background-color: #fff;
   box-shadow: 0 0 20px 10px #fff;
   z-index 1
   :global .menu__modes
      &-title
         display: block
      :local .item
         margin-left: 10px
.item
   display: block;
   padding: 5px 0;
.actions
   display: flex
   align-items: center;