.field
   position: relative
   &[disabled]
      background-color: #f4f4f4;
   &::placeholder
      font-style: italic
   &_
      &active
         .field__text
            border-color: #333;
      &valid
         .field__text
            border-color: #33C3F0;
      &error
         .field__text
            border-color: red;
      &async-validating:after
         width: 15px;
         height: 15px;
         position: absolute;
         top: 50%
         right: 10px
         margin-top: -(@height/ 2);
         box-sizing border-box
         border-radius: 50%;
         border: 2px solid transparent;
         border-top-color: #000;
         border-bottom-color: @border-top-color;
         content ''
         animation: async-validating 1s infinite linear
   &__
      &text
         width:100%;
         padding: 8px 12px;
         border-radius: 4px;
         border: 1px solid #ddd;
         background: #fff;
         outline none
         font 16px / 20px 'Open Sans', sans-serif;
         transition border-color .15s linear
      &eye
         width: 20px;
         height: @width;
         position: absolute;
         top: 50%;
         transform: translateY(-50%);
         right: 10px;
         border-bottom: none;
         color: #000 !important;
         font-size: 16px;

@keyframes async-validating
   0%
      transform: rotate(0deg);
   100%
      transform: rotate(360deg);