.field
   position: relative
   margin-top: 2px
   margin-bottom: 2px
   padding-bottom:13px;
   &[disabled]
      background-color: #f4f4f4;
   &::placeholder
      font-style: italic
   &_
      &active
         .field__
            &text, &select
               border-color: #333;
      &valid
         .field__
            &text, &select
               border-color: #33C3F0;
      &error
         .field__
            &text, &select
               border-color: red;
      &async-validating:after
         width: 15px;
         height: 15px;
         position: absolute;
         top: 50%
         right: 10px
         margin-top: -14px;
         box-sizing border-box
         border-radius: 50%;
         border: 2px solid transparent;
         border-top-color: #000;
         border-bottom-color: @border-top-color;
         background-color: rgba(255,255,255,0.85);
         box-shadow: 0 0 6px 4px #fff;
         content ''
         animation: async-validating 1s infinite linear
   &__
      &text, &select
         width:100%;
         height: 38px;
         padding: 8px 12px;
         border-radius: 4px;
         border: 1px solid #ddd;
         background: #fff;
         outline none
         font 16px / 20px 'Open Sans', sans-serif;
         transition border-color .15s linear
      &eye
         width: 20px;
         height: @width;
         position: absolute;
         top: 9px
         right: 10px;
         border-bottom: none;
         color: #000 !important;
         font-size: 16px;
         line-height @width
         text-align: center;
      &error
         position: absolute
         bottom: 0
         font-size: 10px;

@keyframes async-validating
   0%
      transform: rotate(0deg);
   100%
      transform: rotate(360deg);
