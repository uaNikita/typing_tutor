.root
   width: 16px;
   height: 16px;
   position: absolute;
   right: 10px
   bottom 12px
   
   &:after
      top: 0 !important
      right: 0 !important
      margin-top: 0 !important;
      transition opacity .3s linear
   
   &:before
      width: 16px;
      height: 16px;
      display: none;
      opacity: 0;
      justify-content center
      align-items center
      position: absolute;
      font-family: FontAwesome;
      font: normal normal normal 16px / 1 FontAwesome;
      content: '\F00C';
      color: #008000;
      animation: check-mark 1s linear .3s
   
   &-enter
      &:after
         opacity: 0;
      &-active
         &:after
            opacity: 1;
   
   &-exit
      &:after
         opacity: 0;
      &:before
         display: flex

@keyframes loader
   0%
      transform: rotate(0deg);
   100%
      transform: rotate(360deg);

@keyframes check-mark
   0%
      opacity: 0;
   30%
      opacity: 1;
   70%
      opacity: 1;
   100%
      opacity: 0;
