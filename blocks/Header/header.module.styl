.root
   height 60px
   margin-bottom: 20px;
   display: flex
   align-items center
   justify-content: space-between;

.child
   display: flex
   align-items: center

.modes-title
   margin-right: 5px;
   margin-left: 50px;

.item
   margin-right: 5px;
   margin-left: @margin-right;
   padding: 4px 6px
   border-bottom: none
   border-radius: 3px;
   &_selected
      background-color: #1c88d4;
      color: #fff;
   &_active
      border-bottom: 1px solid #1c88d4;
   &:last-child
      margin-right: 0


