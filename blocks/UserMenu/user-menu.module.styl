.sign-in
   position: relative

.menu
   position: relative
   &_expanded
      .button
         background-color: #f7a700;
         color: #fff;

.button
   width: 60px
   height: 60px
   font-size: 32px

.sign-in-wrap
   display: inline-block
   position: relative

.avatar
   width: 32px
   height: @width
   display inline-block
   border-radius: 50%
   background-color: #ddd
   font-size: 18px
   line-height: @width
   text-transform: uppercase
   text-align: center
   color: #fff

.drop-down
   position: absolute;
   top 60px
   right: 0;
   display: flex;
   flex-direction: column;
   align-items: flex-start;
   background-color: #fff;
   box-shadow: 0 0 10px #1c88d4;
   z-index 1

.nav
   margin-left: -20px;
   padding: 20px 25px;
   background-image: linear-gradient(to bottom, #f7a700 0%, #ffe100 100%);
   z-index 1

.item
   margin-top: 5px
   margin-bottom: 5px
   white-space nowrap
   color: #fff;
   a&
      border-bottom-color: #fff;
      &:hover
         border-bottom-color: #ff5665;
