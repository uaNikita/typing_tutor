.field
   position: relative
   &[disabled]
      background-color: #f4f4f4;
   &::placeholder
      font-style: italic
   &_
      &valid
         .field__control
            border-color: #33C3F0;
      &async-validating:after
         width: 15px;
         height: 15px;
         position: absolute;
         top: 50%
         right: 10px
         margin-top: -(@height/ 2);
         box-sizing border-box
         border-radius: 50%;
         border: 2px solid transparent;
         border-top-color: #000;
         border-bottom-color: @border-top-color;
         content ''
         animation: async-validating 1s infinite linear
   &__
      &control
         padding: 8px 12px;
         border-radius: 4px;
         border: 1px solid #ddd;
         background: #fff;
         outline none
         font 16px / 20px 'Open Sans', sans-serif;
         
@keyframes async-validating
   0%
      transform: rotate(0deg);
   100%
      transform: rotate(360deg);