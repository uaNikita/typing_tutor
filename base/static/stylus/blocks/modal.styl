.modal
   position: fixed
   top: 0
   left: 0
   right: 0
   bottom: 0
   overflow auto
   text-align center
   white-space nowrap
   &:before
      position fixed
      top: 0
      left: 0
      right: 0
      bottom: 0
      background-color rgba(0, 0, 0, 0.5)
      content ''
   &:after
      display inline-block
      vertical-align middle
      width 0
      height 100%
      content ''
   &__
      &content
         position: relative
         display inline-block
         vertical-align middle
         background-color #fff
         border-radius 2px
         margin: 10px
         padding 20px
         white-space normal
         text-align left
