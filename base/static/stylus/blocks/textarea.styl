.textarea
   height: 200px;
   position: relative;
   &:before, &:after
      width: 100%
      height: 5px
      position: absolute
      left: 0
      content ''
      z-index: 1
   &:before
      top: 0
      background-image: linear-gradient(to top, transparent, #fff);
   &:after
      bottom: 0
      background-image: linear-gradient(to bottom, transparent, #fff);
   &__content
      height: 100%
      position: relative
      overflow: hidden
      padding: 0 40px;
      font-size: 28px
      line-height: 40px
   &__typed
      opacity: 0.2
   &__cursor
      border-left: 1px solid #000;
      margin-right: -1px;
      background: #000
      animation cursor 1s infinite linear;
@keyframes cursor
   40%
      visibility hidden;
   to
      visibility hidden;
