.textarea
   height: 6.4em;
   position: relative
   box-shadow 1px 1px 3px rgba(0, 0, 0, 0.2)
   border: 1px solid #dcdcdc;
   border-radius: 3px;
   padding: 0.8em 1em;
   font-size:28px
   line-height:1.6
   &__typed
      opacity:0.2
   &__cursor
      border-left: 1px solid #000;
      margin-right: -1px;
      background: #000
      animation cursor 1s infinite linear;

@keyframes cursor {
   39.99% {
      visibility hidden;
   }
   40% {
      visibility hidden;
   }
   to {
      visibility hidden;
   }
}