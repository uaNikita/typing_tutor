.switcher
   width: 60px;
   height: 36px
   position: relative;
   background-color: #dddddd;
   border-radius: 18px;
   &__
      &toggle
         width: 30px;
         height: @width;
         position: absolute;
         top: 3px
         left: 3px;
         background-color: #fff;
         border-radius: 50%;
         box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.2), 0 3px 4px 0 rgba(0, 0, 0, 0.1);
         transition: left .30s ease-out;
   &[data-active="true"]
      background-color: #6ddc5f
      .switcher
         &__
            &toggle
               position: absolute;
               left: 27px;
