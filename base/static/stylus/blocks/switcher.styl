.switcher
   width: 40px;
   height: 26px;
   position: relative;
   display: block
   input
      display: none
   &__
      &bg
         width: 100%
         height: 100%;
         position: absolute
         background-color: #dddddd;
         border-radius: 18px;
      &toggle
         width: 20px;
         height: @width;
         position: absolute;
         top: 3px
         left: 3px;
         background-color: #fff;
         border-radius: 50%;
         box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.2), 0 3px 4px 0 rgba(0, 0, 0, 0.1);
         transition: left .30s ease-out;
   input:checked ~ .switcher
      &__
         &bg
            background-color: #6ddc5f
         &toggle
            position: absolute;
            left: 17px;
