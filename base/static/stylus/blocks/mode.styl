.mode
   width: 840px;
   margin: 0 auto;
   &__nav
      margin: 15px;
      text-align: center;
   &__nav-or
      display: inline-block
      margin:0 10px
      padding: 4px 6px;
      font-size: 12px
      color: #656565
   &__item
      display: flex
      margin-bottom:15px
   &__label
      flex: 0 0 150px;
      padding-top:5px
   &__item-ctrl
      width: 690px
      display: flex
   &__ctrl-texts
      select
         width: 100%
   &__texts-title
      font-weight bold
   &__texts-text
      max-height: 36px
      position: relative
      overflow: hidden
      font-size: 14px
      line-height: 18px
      text-overflow ellipsis
      white-space nowrap
   &__add-text-form
      width: 100%
   &__texts
      position: relative
      overflow auto
      max-height 330px
   &__text-wrap
      position: relative
   &__text
      position: relative
      padding: 5px 7px;
      border-radius: 4px;
      cursor: pointer
      &:hover
         background-color: rgba(0, 0, 0, 0.02)
      &:after
         height:24px
         position: absolute
         top: 81px
         right: 0
         left: 0
         background: linear-gradient(to bottom, transparent 0%, #fff 70%);
         content ''
   &__text-selected
      background: linear-gradient(to right, rgba(247, 167, 0, 0.5) 0%, rgba(255, 225, 0, 0.5) 100%)
   &__text-title
      overflow: hidden
      white-space nowrap
      text-overflow ellipsis
      font-size: 14px
      line-height:19px
   &__text-content
      max-height: 76px
      overflow: hidden
      line-height: 19px
   &__text-reload
      width: 25px;
      height: @width;
      background-color: rgba(255,255,255,0.8);
      box-shadow: 0 0 5px rgba(255,255,255,0.9);
      border-radius: 50%;
      position: absolute;
      right: 15px;
      top: 15px;
      font-size: 20px;
      line-height: 25px;
      text-align: center;
      color: #33c3f0;
      cursor: pointer
      z-index:1
