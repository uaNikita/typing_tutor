.metronome
   position: relative
   &__btn
      border-bottom: none
      text-decoration: none
      color: #000
   &__range-wrap
      width: 200px;
      position: absolute;
      top: -150px;
      right: 100%;
      padding: 10px 10px 20px 10px;
      transition: top .15s;
   &:hover .metronome__range-wrap
      top: -18px;
   &__title
      margin-bottom: 12px;
      font-size: 10px;
      font-weight: normal;