.noUi
   &-target
      background-color: #20b426
      border: none
      box-shadow none
      &.noUi-connect
         box-shadow none
   &-connect
      box-shadow none
   &-horizontal
      height: 4px
   &-handle
      box-shadow none
      &:before, &:after
         height: 12px;
         left: 3px;
         top: 5px;
      &:after
         left: 5px;
   &-horizontal
      .noUi-handle
         width: 11px;
         height: 24px;
         left: -5.5px;
         top: -10px;
   &-value
      position: absolute;
      top: -18px;
      left: 50%;
      padding: 0 4px;
      transform: translateX(-50%);
      background-color: #20b426;
      border-radius: 3px;
      font-size: 10px;
      line-height: 13px
      color: #fff;
      text-align: center;
      &:after
         position: absolute;
         top: 13px;
         left: 50%;
         margin-left: -2px;
         border-width: 2px;
         border-style: solid;
         border-color: transparent;
         border-top-color: #20b426;
         content: '';