@require 'reset'

body
   font 14px / 1.3 'Open Sans', sans-serif;
input
   &[type="text"], &[type="password"], &[type="email"]
      padding: 0 12px;
      border-radius: 4px;
      border: 1px solid #ddd;
      background: #fff;
      font 16px / 36px 'Open Sans', sans-serif;
      &[disabled]
         background-color: #f4f4f4;
a
   text-decoration: none
   border-bottom: 1px solid rgba(28, 136, 212, .3);
   color: #1c88d4;
   &:hover
      border-bottom-color: rgba(255, 86, 101, 0.3);
      color: #ff5665;
