@require 'reset'

body
   font 14px / 1.3 'Open Sans', sans-serif;
textarea,
input[type="text"],
input[type="password"],
input[type="email"]
   padding: 8px 12px;
   border-radius: 4px;
   border: 1px solid #ddd;
   background: #fff;
   outline none
   font 16px / 20px 'Open Sans', sans-serif;
   &[disabled]
      background-color: #f4f4f4;
   &::placeholder
      font-style: italic
a
   text-decoration: none
   border-bottom: 1px solid rgba(28, 136, 212, .3);
   color: #1c88d4;
   &:hover
      border-bottom-color: rgba(255, 86, 101, 0.3);
      color: #ff5665;
