@require 'reset'

body
   font 14px / 1.3 'Open Sans', sans-serif;

a, .link
   text-decoration: none
   border-bottom: 1px solid rgba(28, 136, 212, .3);
   transition: color 0.15s linear, border-bottom-color 0.15s linear;
   color: #1c88d4;
   &:hover
      border-bottom-color: rgba(255, 86, 101, 0.3);
      color: #ff5665;
button
   border: none
   background: none
   color: #1c88d4
   cursor: pointer
   transition: color 0.15s linear
   &:hover
      color: #ff5665;
// Custom plugins styles
@require 'plugins/noUiSlider'
@require 'plugins/perfect-scrollbar'

